	<PropertyGroup>
		<TargetFrameworks>netcoreapp2.1;net461;net5.0</TargetFrameworks>
		<RootNamespace>library_core_tests</RootNamespace>

		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="eccert.p12">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="ehealth-01050399864-int.p12">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="ehealth-01050399864-int.pwd">
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
